{
    "name": "@finance-app/api",
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "dev": "npx tsx watch src/server.ts",
        "start": "node dist/src/server.js",
        "build": "tsc && tsc-alias && fix-esm-import-path dist",
        "test": "dotenv -e .env.test -- jest --silent --passWithNoTests --runInBand --detectOpenHandles --forceExit",
        "test:watch": "npm run test -- --watch",
        "test:coverage": "npm run test -- --coverage",
        "db:migrate": "prisma migrate dev",
        "db:migrate:deploy": "prisma migrate deploy",
        "db:generate": "prisma generate",
        "db:studio": "prisma studio",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "ts:check": "npx tsc --noEmit --project tsconfig.json",
        "prettier:check": "prettier --check .",
        "prettier:fix": "prettier --write ."
    },
    "devDependencies": {
        "@faker-js/faker": "^9.9.0",
        "@finance-app/eslint-config": "workspace:*",
        "@finance-app/prettier": "workspace:*",
        "@finance-app/tsconfig": "workspace:*",
        "@types/express": "^5.0.3",
        "@types/jest": "^30.0.0",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^24.3.0",
        "@types/pg": "^8.15.5",
        "@types/supertest": "^6.0.3",
        "@types/swagger-ui-express": "^4.1.8",
        "eslint": "^9.36.0",
        "fix-esm-import-path": "^1.10.3",
        "globals": "^16.3.0",
        "jest": "^30.1.0",
        "jest-mock-extended": "^4.0.0",
        "prettier": "^3.6.2",
        "prisma": "^6.15.0",
        "supertest": "^7.1.4",
        "ts-jest": "^29.4.1",
        "ts-node": "^10.9.2",
        "tsc-alias": "^1.8.16",
        "tsup": "^8.5.0",
        "tsx": "^4.20.5",
        "typescript": "^5.9.2"
    },
    "dependencies": {
        "@prisma/client": "6.15.0",
        "@types/bcrypt": "^6.0.0",
        "@types/validator": "^13.15.2",
        "bcrypt": "^6.0.0",
        "dayjs": "^1.11.14",
        "dotenv": "^17.2.1",
        "dotenv-cli": "^10.0.0",
        "express": "^5.1.0",
        "ioredis": "^5.7.0",
        "jsonwebtoken": "9.0.2",
        "pg": "^8.16.3",
        "rate-limiter-flexible": "^7.3.1",
        "swagger-ui-express": "^5.0.1",
        "uuid": "^11.1.0",
        "validator": "^13.15.15",
        "zod": "^4.1.3"
    }
}
