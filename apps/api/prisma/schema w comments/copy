// Looking for ways to speed up your queries, or scale easily with your serverless or edge functions?
// Try Prisma Accelerate: https://pris.ly/cli/accelerate-init

generator client {
  provider = "prisma-client-js"
  // para que eu consiga exportar o PrismaClient, eu preciso eliminar essa linha abaixo (isso porque eu uso typescript)
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// https://www.prisma.io/docs/orm/prisma-client/special-fields-and-types
// https://www.prisma.io/docs/orm/reference/prisma-schema-reference
// dentro do "model" é onde definimos nossa tabela
model User {
  // o @id diz que é um capo PK (primary key)
  // o @default irá dizer que o por padrão teremos um uuid caso não seja preenchido
  id         String @id @default(uuid())
  // Se a gente coloca apenas "String" ele por padrão coloca como "text" (que nã otem limite de caracteres)
  firstName String @db.VarChar(50)
  lastName  String @db.VarChar(50)
  // definimos que ele é unico com @unique
  email      String @unique @db.VarChar(100)
  password   String @db.VarChar(100)

  // e para que o campo "id" ou qualquer outro consiga ser referenciado em outra tabela, precisamos dizer dizer que "User", pode ter várias transactions:
  // 1:N -> Um usuári pode ter várias transaction
  transactions Transaction[]
}

model Transaction {
  id      String          @id @default(uuid())
  // para fazer uma relação no prisma, temos que primeiro instanciar a coluna apenas com o tipo dela
  // N:1 -> Varias transaction só pode ter um usuário
  userId String
  // e depois dize "user" é do tipo "User" (tabela) e relacionamo o field dessa tabela "user" faz referencia com o campo "id" da coluna de user 
  user    User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  name    String          @db.VarChar(100)
  amount  Decimal         @db.Decimal(10, 2)
  // se deixar apenas "DateTime" ele vai criar uma coluna do tipo timestamp
  // para especificar é só colocar @db.Date
  date    DateTime        @db.Date
  type    TransactionType
}

enum TransactionType {
  EARNING
  EXPENSE
  INVESTMENT
}
